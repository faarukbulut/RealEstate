@model List<ResultBottomGridDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Öne Çıkanlar Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Hizmet Başlık</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.BottomGridID</th>
                                    <td>@item.Title</td>
                                    <td><a href="/EstateAdmin/BottomGrid/DeleteBottomGrid/@item.BottomGridID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/EstateAdmin/BottomGrid/UpdateBottomGrid/@item.BottomGridID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/EstateAdmin/BottomGrid/CreateBottomGrid" class="btn btn-outline-info">Öne Çıkan Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
