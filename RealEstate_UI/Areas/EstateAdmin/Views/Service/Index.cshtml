@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/EstateAdmin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Hizmet Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Hizmet Adı</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.ServiceID</th>
                                    <td>@item.ServiceName</td>
                                    <td>@item.Status</td>
                                    <td><a href="/EstateAdmin/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/EstateAdmin/Service/UpdateService/@item.ServiceID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/EstateAdmin/Service/CreateService" class="btn btn-outline-info">Hizmet Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
