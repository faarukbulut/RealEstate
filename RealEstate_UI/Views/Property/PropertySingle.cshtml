
@{
    ViewData["Title"] = "PropertySingle";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about pt-5">
        <div class="container pt-lg-5 py-3">
        </div>
    </div>
</section>
<section class="w3l-breadcrumb">
    <div class="container">
        <ul class="breadcrumbs-custom-path">
            <li><a href="/Default">Anasayfa</a></li>
            <li><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> İlanlar</li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span>İlan Detay</li>
        </ul>
    </div>
</section>
<section class="w3l-blog post-content py-5">
    <div class="container py-lg-4 py-md-3 py-2">
        <div class="inner mb-4">
            <ul class="blog-single-author-date align-items-center">
                <li>
                    <div class="listing-category"><span>@ViewBag.Type</span></div>
                </li>
                <li><span class="fa fa-clock-o"></span> @ViewBag.DateDiff Gün Önce</li>
                <li><span class="fa fa-eye"></span> 250 Görüntüleme</li>
            </ul>
        </div>
        <div class="post-content">
            <h2 class="title-single">@ViewBag.Title1</h2>
        </div>
        <div class="blo-singl mb-4">
            <ul class="blog-single-author-date align-items-center">
                <li>
                    <p>@ViewBag.Address @ViewBag.District / @ViewBag.City</p>
                </li>
                <li><span class="fa fa-bed"></span> @ViewBag.BedCount Yatak Odası</li>
                <li><span class="fa fa-bath"></span> @ViewBag.BathCount Banyo</li>
                <li><span class="fa fa-share-square-o"></span> @ViewBag.ProductSize m2</li>
            </ul>
            <ul class="share-post">
                <a href="#url" class="cost-estate m-o">₺ @ViewBag.Price</a>
            </ul>
        </div>
        <div class="row">
            <div class="col-lg-8 w3l-news">
                <div class="blog-single-post">
                    @await Component.InvokeAsync("_PropertySliderComponentPartial", new {id = ViewBag.ProductID})

                    <div class="single-post-content">
                        <h3 class="post-content-title mb-3">İlan Açıklaması</h3>
                        <p class="mb-4">@ViewBag.Description</p>
                        
                        <div class="single-bg-white">
                            <h3 class="post-content-title mb-4">İlan Detayları</h3>
                            <ul class="details-list">
                                <li><strong>İlan ID:</strong> @ViewBag.ProductID </li>
                                <li><strong>Boyut :</strong> @ViewBag.ProductSize m2 </li>
                                <li><strong>Oda :</strong> @ViewBag.RoomCount </li>
                                <li><strong>Yatak Odası :</strong> @ViewBag.BathCount </li>
                                <li><strong>Banyo :</strong> @ViewBag.BedCount </li>
                                <li><strong>Yapı Türü :</strong> Beton </li>
                                <li><strong>Garaj Sayısı :</strong> @ViewBag.GarageSize </li>
                                <li><strong>Fiyat :</strong> ₺ @ViewBag.Price </li>
                                <li><strong>Yıl :</strong> @ViewBag.BuildYear </li>
                                <li><strong>İlan Tarihi :</strong> @ViewBag.Date </li>
                            </ul>
                        </div>

                        @await Component.InvokeAsync("_PropertyAmenityComponentPartial")
                    </div>

                    <div class="single-bg-white">
                        <h3 class="post-content-title mb-4">Lokasyon</h3>
                        <div class="agent-map">@Html.Raw(@ViewBag.Location)</div>
                    </div>

                    <div class="single-bg-white mb-0">
                        <h3 class="post-content-title mb-4">Video</h3>
                        <div class="post-content">
                            @Html.Raw(@ViewBag.VideoUrl)
                        </div>
                    </div>
                </div>
            </div>
            @await Component.InvokeAsync("_PropertyAppUserComponentPartial")
        </div>
    </div>
</section>
