@model List<ResultLast3ProductWithCategoryDto>

<div class="w3l-news" id="news">
    <section id="grids5-block" class="py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <h3 class="title-big text-center">Son 3 Yeni İlan</h3>
            <div class="row mt-lg-5 mt-4 pt-3">
                @foreach(var item in Model)
                {
                    <div class="col-lg-4 col-md-6 mt-md-0 mt-sm-4">
                        <div class="grids5-info">
                            <span class="posted-date">
                                <a href="#">
                                    <span class="small">@item.advertisementDate.ToString("yyyy")</span>
                                    <span class="big">@item.advertisementDate.ToString("dd")</span>
                                    <span class="small">@item.advertisementDate.ToString("MM")</span>
                                </a>
                            </span>
                            <a href="#" class="d-block zoom">
                                <img src="~/starter/assets/images/@item.coverImage" alt=""
                                     class="img-fluid news-image" />
                            </a>
                            <div class="blog-info">
                                <a href="#category" class="category">@item.categoryName</a>
                                <h4><a href="#">@item.title</a></h4>
                                <p>@item.description.Substring(0,100)</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>